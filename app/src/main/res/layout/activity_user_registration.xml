<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    tools:context=".ui.UserRegistrationActivity">

    <LinearLayout
        android:id="@+id/lin_layout"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/colorParrotGreen"
            android:layout_weight="1"
            android:textColorHint="@color/colorWhite"
            android:hint="Enter your name"/>
        <Spinner
            android:id="@+id/spn_gender"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dob"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:hint="Select DOB"
                android:fontFamily="serif"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorParrotGreen"
                android:textColorHint="@color/colorWhite"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_calendarIcon"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_calendar_today_24"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_registrUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Now !!"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/colorGrey"
        android:fontFamily="serif"
        android:gravity="center"
        android:background="@drawable/rectangle_shape"
        app:layout_constraintTop_toBottomOf="@+id/lin_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>