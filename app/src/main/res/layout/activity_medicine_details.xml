<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorGrey"
    android:layout_height="match_parent"
    tools:context=".ui.MedicineDetailsActivity">

    <ImageView
        android:id="@+id/iv_medImage"
        android:layout_width="match_parent"
        android:src="@drawable/ic_baseline_local_hospital_24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="200dp"/>
    <LinearLayout
        android:id="@+id/ly_medDetails"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/iv_medImage"
        android:weightSum="3"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_medNameDtls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="serif"
            android:textColor="@color/colorParrotGreen"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tv_medUsgDtls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorParrotGreen"
            android:textSize="25dp"
             />

        <TextView
            android:id="@+id/tv_medDescDtls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorParrotGreen"
            android:textSize="20dp"
             />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>