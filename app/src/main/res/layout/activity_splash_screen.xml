<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    tools:context=".view.SplashScreenActivity">

    <ImageView
        android:id="@+id/iv_splashScreenLogo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_baseline_local_hospital_24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_splashScreenText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:fontFamily="cursive"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/iv_splashScreenLogo"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorParrotGreen"
        android:text="Medicine Advisor"
        android:textSize="80dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>